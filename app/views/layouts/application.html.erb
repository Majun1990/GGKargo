<!DOCTYPE html>
<html>
  <head>
    <title>Ggkargo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
          <a class="navbar-brand" href="/">GGKargo</a>
          <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item">
              <a class="nav-link"><%= link_to 'About Us', about_path %></a>
            </li>
            &nbsp
            &nbsp
           <li class="nav-item">
             <a class="nav-link"><%= link_to 'Resources', resources_path %></a>
           </li>
           &nbsp
           &nbsp
          <li class="nav-item">
            <a class="nav-link"><%= link_to 'FAQ', faq_path %></a>
          </li>
           &nbsp
           &nbsp
          <li class="nav-item">
            <a class="nav-link"><%= link_to 'Contact Us', new_inquiry_path %></a>
          </li>
        </ul>
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>            
            </li>
          <% else%>
            <li class="nav-item">
              <%= link_to 'Employee Sign In', new_user_session_path, class: 'nav-link' %>

            </li>
          <% end %>
        </ul>
        </div>
      </nav>

      <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
      <p class="alert alrt-danger"><%= alert %> </p>
      <% end %>

      <%= yield %>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-3">
          <h3>GGKargo, LLC</h3>
          <p>1728 Grove Tree Ln, Clover, Sc 29710
          Toll Free: 1-888-950-SEND(7363)
          Direct/Text: 704-674-1475<br>   
          Fax: 803-675-5120</p>
          </div>
          <div class="col-12 col-sm-3">
          <h3>Business Hours</h3>
          <p><b>Monday - Thursday: </b>8:30am to 6:30pm<br>
          <b>Friday: </b>8:30am to 12:00pm</p>
          <i>Excluding Holidays</i>
          </div>
          <div class="col-12 col-sm-3">
            <h3>Social</h3>
            <p>Email questions to: <a href="mailto: CustomerSupport@ggkargo.com">CustomerSupport@ggkargo.com</a></p>
            <span class="fa fa-facebook-square fa-2x"></span>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
